<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<packaging>pom</packaging>

	<parent>
		<groupId>org.mobicents.servers.jainslee.core</groupId>
		<artifactId>restcomm-slee-core</artifactId>
		<version>2.8.113-summa-1.0.2-SNAPSHOT</version>
		<relativePath>../..</relativePath>
	</parent>

	<groupId>org.mobicents.servers.jainslee.tools</groupId>
	<artifactId>restcomm-slee-jopr-as-5-plugin-parent</artifactId>

	<name>Jopr Restcomm JAIN SLEE Plugin For JBoss 5</name>
	<description>A plugin for managing Restcomm JAIN SLEE on JBoss 5 servers</description>

	<properties>
		<rhq.groupId>org.rhq</rhq.groupId>
		<rhq.version>1.2.0.GA</rhq.version>
		<jbossas.version>5.1.0.GA</jbossas.version>
		<jopr-version>2.2.0.GA</jopr-version>
		<rhq-version>3.0.0.B06</rhq-version>
		<restcomm.jslee.version>${project.version}</restcomm.jslee.version>
		<getopt.version>1.0.13</getopt.version>
	</properties>

	<modules>
		<module>jar</module>
	</modules>

	<profiles>
		<profile>
			<id>release</id>
			<modules>
				<module>docs</module>
			</modules>
		</profile>	
		<profile>
			<id>maven-release</id>
			<modules>
				<module>docs</module>
			</modules>			
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
				<groupId>org.mobicents.tools</groupId>
				<inherited>false</inherited>
				<executions />
				<configuration>
					<excludePoms />
					<classpathExcludes>
						<exclude>xml-apis:xml-apis</exclude>
						<exclude>jtidy:jtidy</exclude>
					</classpathExcludes>
					<resolveTransitiveDependencies>true</resolveTransitiveDependencies>
					<eclipseProjectName>slee-tool-jopr-plugin</eclipseProjectName>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
</project>
